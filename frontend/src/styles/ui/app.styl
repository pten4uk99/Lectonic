/* шрифты работают через ссылку в index.html */

*
  margin 0
  padding 0

p
  margin 0
  

body
  padding 0px
  margin 0px
  color var(--main-black)
  background-color var(--main-white)
  font-family 'Montserrat', sans-serif

/* чтоб футер был прибит к низу, но не заезжал на контент при скролле */
html, body
  width: 100%
  height 100%

//#root
//  min-height 100%
//  display flex
//  flex-direction column
//
main
  float: left;
  width: 100%
  //flex 1 1 auto

/* Заголовки */
h1
  font-weight 500
  font-size 28px
  line-height 34px

h2
  font-weight 700
  font-size 18px
  line-height 22px
  padding 0

h3
  font-weight 700
  font-size 16px
  line-height 20px

h4
  font-weight 700
  font-size 14px
  line-height 17px

h5
  font-weight 400
  font-size 18px
  line-height 22px
  text-decoration-line underline


/* КНОПКИ */
/*Main buttons*/
.btn
  width 320px
  border-radius 30px
  font-weight 500
  font-size 14px
  line-height 17px
  padding 14px 0px
  border none
  background-color var(--add-purple)
  color var(--main-white)
  cursor pointer
  transform rotate(360deg)

.btn:disabled
  background-color var(--add-greyDisable)
  cursor not-allowed

.btn:hover:not(:disabled)
  color rgba(255, 255, 255, 0.6)

.btn-outline
  width 320px
  border-radius 30px
  font-weight 500
  font-size 14px
  line-height 17px
  padding 14px 0px
  border 1px solid var(--add-purple)
  background-color var(--main-white)
  color var(--add-purple)
  cursor pointer
  

/*ниже кнопки будут переделаны и переименованы в соответствии с UI KIT_2*/
.btn-notChosen
  background var(--main-white)
  border 1px solid var(--main-black)
  border-radius 45px
  padding 9px 20px
  margin-right 12px
  cursor pointer

.btn-chosen
  background var(--main-blue)
  color var(--main-white)
  border none
  font-weight 700
  border-radius 45px
  padding 9px 20px
  margin-right 12px
  cursor pointer

.btn-addedTopic
  background var(--add-grey)
  border none
  border-radius 45px
  padding 9px 20px
  margin-right 12px
  cursor pointer
  font-size 14px
  line-height 17px

/* INPUTS */
/*обычные*/
.form__input
  width 320px
  outline none
  border none
  border-bottom 1px solid var(--main-black)
  font-size: 12px;
  line-height: 15px;
  padding-bottom 8px
  cursor pointer
  border-radius 0

.form__input::placeholder
  color var(--add-darkGrey)

.form__input:disabled
  border-bottom 1px solid var(--add-darkGrey)

.form__input:focus
  border-bottom 1px solid var(--main-blue) !important

.form__input:focus::-webkit-input-placeholder
  color transparent

.form__input:focus::-moz-placeholder
  color transparent

.form__input:focus:-moz-placeholder
  color transparent

.form__input:focus:-ms-input-placeholder
  color transparent
  
.form__input:not(:placeholder-shown)
  border-bottom 1px solid var(--add-darkGrey)

/*добавление ссылки*/
.input__add-link {
  width 276px
  padding 7px 75px 7px 19px
  border 1px solid var(--add-darkGrey)
  border-radius 18px
  cursor pointer
}

.input__add-link:focus {
  outline: none;
}

.input__add-link:focus::-webkit-input-placeholder
  color transparent

.input__add-link:focus::-moz-placeholder
  color transparent

.input__add-link:focus:-moz-placeholder
  color transparent

.input__add-link:focus:-ms-input-placeholder
  color transparent
  
/* TEXTAREA */
.form__textarea 
  width 419px /*тк паддинги и бордеры*/
  /*высота разная по проекту, ниже описаны модифаеры*/
  border 1px solid var(--add-darkGrey)
  border-radius 18px
  font-family 'Montserrat', sans-serif
  font-size: 12px;
  line-height: 15px;
  padding-top 8px
  padding-left 20px
  resize none

.form__textarea::placeholder
  color var(--add-darkGrey)

.form__textarea:focus
  outline none
  
.textarea-height88 {
  min-height 78px; /*тк паддинги и бордеры*/
}

.textarea-height178 {
  min-height 168px; /*тк паддинги и бордеры*/
}
  
/* В Safari убирает иконку автозаполнения */
::-webkit-credentials-auto-fill-button
  visibility hidden
  pointer-events none
  position absolute
  right 0

/* Текст, сопровождающий иконки (это возможно поменяется) */
.role-text
  font-size 14px
  line-height 17px
  font-weight 700
  color var(--main-blue)

.addRole-text, .additional-text
  font-size 12px
  line-height 15px
  text-decoration-line underline
  color var(--main-blue)

.required-sign
  color var(--add-pink)

/*Адаптив под разную ширину экранов*/
@media screen and (max-width: 720px) {
  .is-desktop {
    display: none !important; } }

@media screen and (min-width: 721px) {
  .is-mobile {
    display: none !important; } }