.confirm-dates__header {
  font-weight: 700
}
  
.confirm-dates__underline {
  background-color: $add-grey
  margin-top: 16px
  margin-bottom: 23px
  width: 448px
  height: 1px
}

.confirm-dates__block {
  .confirm-date {
    display: flex
    align-items: center
    justify-content: center
    margin-bottom: 12px
    .time {
      margin: 0
      font-weight: 700
      margin-left: 15px
    }
  }
}

.chat-messages__block {
  display: grid
  grid-auto-flow: row
  grid-template-rows: min-content 1fr .2fr
  height: 100%
  .actions__block {
    background-color: white
    padding: 18px
    box-sizing border-box
    
    .lecture {
      display flex
      
      .back-arrow {
        display flex
        justify-content: center;
        width: 30px
        height: 30px
        cursor pointer
        img {
          height: 11px
          margin-top: 5px
        }
      }
      .text {
        margin-left: 13px
        .lecture-name {
          font-size: 16px
          font-weight: 500
        }
        .respondent-name {
          font-size: 14px
          
          .is-online, .is-offline {
            margin-left: 8px;
            font-size: 12px;
            font-weight: 500;
          }
          .is-online {
            color: rgba(0, 211, 120, 1);
          }      
          .is-offline {
            color: $add-grey;
          }
        }
      }
    }
    .buttons {
      display flex
      justify-content: center;
      margin-top: 7px
      
      .lecture-confirmed {
        text-align: center
        font-size: 12px
        color: $main-blue;
      }
      .lecture-rejected {
        text-align: center
        font-size: 12px
        color: $add-pink;
      }
      
      button {
        width: 100px
        height: 29px
        border-radius 18px
        border: 1px solid #C4C4C4;
        background-color: white
        font-family: 'Montserrat', sans-serif;
        cursor pointer

        &.confirm {
          margin-right: 15px
          background-color: rgba(196, 196, 196, 1);
        }
        &.reject-response {
          width: 200px
        }
      }
    }
  }
  .messages__block {
    //height: 434px
    background-color: rgba(245, 245, 245, 1);
    padding-top: 40px
    padding-bottom: 10px
    box-sizing: border-box
    overflow: auto;
    
    .block-message { 
      float: right;
      position: relative;
      width: 100%;
      padding: 5px 15px;
      box-sizing border-box
  /*     border: 1px solid; */
      
      .confirm-message {
        margin: 20px 0
        text-align: center
        font-size: 11pt
        color: $main-blue
      }      
      .reject-message {
        margin: 20px 0
        text-align: center
        font-size: 11pt
        color: $add-pink
      }
      .self-message, .other-message {
        padding: 8px 16px;
    
        font-size: 11pt;
    
        max-width: 80%;
        min-width: 30px;
        min-height: 10pt;
    
        word-wrap: break-word;
      }
      .self-message {
        position: relative
        background-color: white;
        float: right;
        border-radius: 14px 14px 0 14px;
        
        .need-read {
          position: absolute
          bottom: 50%
          left: -15px
          transform: translateY(50%)
          width: 6px
          height: 6px
          background-color: $add-pink
          border-radius: 50%
        }  
      }
      .other-message {
        float: left;
        background-color: rgba(219, 219, 219, 1);
        border-radius: 14px 14px 14px 0;
        
      }  
    }
  }
  .input__block {
    display: flex
    align-items: flex-end
    position: relative
    padding: 20px
    background-color: white
    
    textarea {
      width: 351px
      resize: none
      border-radius 18px
      border 1px solid $main-grey
      outline none
      padding: 8px 16px
      box-sizing border-box
      font-family: 'Montserrat', sans-serif;
      
      &::-webkit-scrollbar {
        display none
      }
    }
    img {
      position: absolute
      right: 20px
      bottom: 20px
      cursor: pointer;
    }
  }
}