.modal__background {
  display: flex
  justify-content: center;
  align-items: center
  
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 5, 26, .65);
  z-index: 100;
  
  animation: bg-visible .1s
}

.modal__wrapper {
  position: relative;
  background: white;
  border-radius: 18px;
  box-shadow: 0 4px 40px rgba(0, 12, 63, 0.2);
  
  animation: visible .1s
}
  
@keyframes visible {
  from {
    transform: scale(0)
  }
  to {
    transform: scale(1)
  }
}

@keyframes bg-visible {
  from {
    opacity: 0%
  }
  to {
    opacity: 100%
  }
}

.block__close-icon {
  width: 100%
  height: 52px
  .modal__close {
    position: absolute;
    top: 16px
    right: 16px
    
    cursor: pointer;
  }
}


.modal__body {
  display: flex
  justify-content: center;
  align-items: center
  width: 100%
}
