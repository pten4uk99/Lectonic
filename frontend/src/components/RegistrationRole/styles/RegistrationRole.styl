    margin-bottom: 36px;
}
  
.margin-bottom-24 {
  margin-bottom: 24px;
}

.margin-bottom-12 {
    margin-bottom: 12px;
}
  
.margin-right-12 {
  margin-right: 12px;
}
  
.step-block__user-agreement {
  text-decoration: underline;
  margin-top: 8px;
  font-size: 11px;
  line-height: 13px;
  cursor: pointer;
}


.step-block__right-comment {
   width:  460px;
  margin-top: 8px;
}
  
