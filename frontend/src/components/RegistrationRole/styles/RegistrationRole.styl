.role-steps__content-wrapper {
  font-size: 14px;
  line-height: 17px;
}

.content__choose-role-wrapper {
  display: flex;
  align-items: center;
  margin-bottom: 36px;
}

.required-sign.chooseRole {
  margin-left: 8px;
}

.lecturer-right__header {
  padding-top: 25px
