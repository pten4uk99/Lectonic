.btn-role {
  border-radius 45px
  font-size 14px
  font-weight 400
  padding 6px 20px
  border 1px solid var(--main-black)
  background-color var(--main-white)
  color var(--main-black)
  font-family: 'Montserrat', sans-serif;
  cursor pointer
}
  
.btn-role-selected {
  border-radius 45px
  font-size 14px
  font-weight 700
  padding 6px 20px
  border 1px solid var(--main-blue)
  background-color var(--main-blue)
  color var(--main-white)
  font-family: 'Montserrat', sans-serif;
  cursor pointer
}

