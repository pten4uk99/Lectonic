.photo-preview__block {
  .btn-file {
    font-weight: 500
    font-size: 14px

    box-sizing border-box
    margin-left: 20px

    text-align: center
    
    border: 1px solid var(--add-purple);
    border-radius: 30px;
    background: var(--main-white);
    color: var(--add-purple);
    padding: 7px 15px
    cursor: pointer;
    
    input {
      display: none
    }
  }
}

.block-images {
  grid-row: 2
  grid-column: 2
  display: grid
  grid-template-columns: repeat(auto-fit, 100px)
  grid-template-rows: 1fr
  grid-auto-flow: row
  grid-gap: 12px
  
  margin-top: 12px
  margin-left: 20px
  margin-bottom: 24px

  .diploma-image {
    //justify-self center
    width: max-content
    height: 72px
    border-radius: 18px
    overflow: hidden
  } 
}