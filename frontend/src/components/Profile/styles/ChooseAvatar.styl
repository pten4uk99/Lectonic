.choose-avatar {
  text-align: center;
  margin: 12px 0px 56px;
}

.choose-avatar__text {
  font-size: 18px;
  line-height: 22px;
  font-weight: 700;
  color: var(--main-blue);
  margin-bottom: 32px;
}

.choose-avatar__sub-text {
  font-size: 14px;
  line-height: 17px;
  margin-bottom: 20px;
}

.choose-avatar__btn {
  display: block;
  margin: 0px auto 36px;
}

#choose-avatar__file {
  display: none;
}
  
.blue-circle-avatar {
  width: 200px;
  height: 200px;
  border: 2px solid var(--main-blue);
  border-radius: 50%;
  margin: -16px auto 36px;
}
  
.chosen-avatar {
  width: 192px;
  height: 192px;
  border-radius: 50%;
  margin-top: 4px;
  object-fit:cover;
}
