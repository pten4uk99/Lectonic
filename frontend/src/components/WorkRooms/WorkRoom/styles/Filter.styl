.workrooms__card__filter {
  display: flex
  align-items: center

  font-weight: 400;
  font-size: 12px

  margin-left: 10px

  .icon {
    position: relative;
    display: flex;
    align-items: center;

    cursor: pointer;
  }

  .filter {
    display: flex
    align-items: center

    .city, .domain {
      display: flex

      span {
        display: flex
        align-items: center;
        font-weight: 400;
      }
    }

    .city {
      margin-left: 10px
    }

    .domain {
      display flex
      align-items: center
      margin-left: 20px

      .selected-domain {
        background-color: $add-grey
        border-radius: 18px

        margin-left: 10px
        padding: 6px 15px

        width: max-content
      }
    }

  }

  .btn-confirm {
    display flex
    justify-content: center;

    width: 128px;
    height: inherit;

    margin-top: 40px;
    padding: 5px 21px;

    text-align: center
  }
}
