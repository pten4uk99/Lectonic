.calendar__block {
  .calendar__header {
    margin-top: 28px
    font-weight: 600
  }

  .calendar-lectures__block {
    margin-top: 30px;
    margin-left: 18px;
    transform: translateY(5px)
    
    color: $add-greyDisable;
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    
    cursor: pointer;

    & > span {
      padding: 16px 21px;
      padding-bottom: 25px;

      &.active {
        color: white;
        text-decoration: none;
        
        background-color: $main-blue;
        border-radius: 18px 18px 0 0;
      }
    }
    
    &>.underline {
      margin-left: 15px;
      background-color: $main-blue;
      height: 4px;
      width: 340px;
      transform: translateY(17px);
      border-radius: 0 50% 50% 0;
      
      transition: transform .2s, width .2s;
      
      &.right {
        transform: translateY(17px) translateX(10px);
        width: 400px;
        border-radius: 100%;
      }
    }
  }

  .calendar__block-tooltips {
    display: flex
    font-size: 11px

    .tooltip__not-confirmed {
      display: flex
      align-items: center
      margin-right: 16px

      span {
        display: block
        width: 12px
        height: 12px
        margin-right: 8px
        background-color: $main-grey
        border-radius: 50%
      }
    }

    .tooltip__confirmed {
      display: flex
      align-items: center

      span {
        display: block
        width: 12px
        height: 12px
        margin-right: 8px
        background-color: $main-blue
        border-radius: 50%
      }
    }
  }
  margin-bottom: 40px
}