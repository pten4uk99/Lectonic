.calendar__block {
  .calendar__header {
    margin-top: 28px
    font-weight: 600
  }
  .calendar__block-tooltips {
    display: flex
    font-size: 11px
    .tooltip__not-confirmed {
      display: flex
      align-items: center
      margin-right: 16px
      span {
        display: block
        width: 12px
        height: 12px
        margin-right: 8px
        background-color: $main-grey
        border-radius: 50%
      }
    }
    .tooltip__confirmed {
      display: flex
      align-items: center
      span {
        display: block
        width: 12px
        height: 12px
        margin-right: 8px
        background-color: $main-blue
        border-radius: 50%
      }
    }
  }
  margin-bottom: 40px
}