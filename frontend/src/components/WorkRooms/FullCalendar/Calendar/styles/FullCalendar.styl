.calendar__block {
  .calendar__header {
    margin-top: 28px
    font-weight: 600
  }
  .calendar-lectures__block {
    margin-top: 16px
    margin-bottom: 20px
    margin-left: 8px
    font-size: 11px
    font-weight: 700
    color: $add-greyDisable;
    text-decoration: underline
    cursor: pointer;
    
    .active {
      color: $main-blue;
      text-decoration: none
    }
    .responses {
      margin-left: 16px
    }
  }
  .calendar__block-tooltips {
    display: flex
    font-size: 11px
    .tooltip__not-confirmed {
      display: flex
      align-items: center
      margin-right: 16px
      span {
        display: block
        width: 12px
        height: 12px
        margin-right: 8px
        background-color: $main-grey
        border-radius: 50%
      }
    }
    .tooltip__confirmed {
      display: flex
      align-items: center
      span {
        display: block
        width: 12px
        height: 12px
        margin-right: 8px
        background-color: $main-blue
        border-radius: 50%
      }
    }
  }
  margin-bottom: 40px
}