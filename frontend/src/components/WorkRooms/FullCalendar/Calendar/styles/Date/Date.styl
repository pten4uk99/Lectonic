.calendar-date {
    align-self: center;
    justify-self: center;

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;

    width: 54px;
    height: 54px;

    border-radius: 18px;
    background-color: #fff;

    transition: transform .1s;

    z-index: 1;
    cursor: pointer;
}

.calendar-date:hover {
    font-weight: 700;
    border: 2px solid var(--main-grey);
    box-shadow: 0 4px 10px rgba(0, 6, 32, .2);

    transform: scale(1.3);

    z-index: 2;
}

.calendar-date.active {
    transform: scale(1.32);

    font-weight: 700;

    border: 2px solid var(--main-grey);
    box-shadow: 0 4px 10px rgba(0, 6, 32, .2);

    z-index: 3;
}

.calendar-date > span {
    display: block;
    margin-top: 8px;

    font-size: 12px;
}

.calendar-date.today {
    font-weight: 700;
    background-color: rgba(95, 181, 255, 1);
}

.calendar-date.today > span {
    margin-top: 3px;
    font-size: 24px;
    color: white;
}

.calendar-date.inactive {
    color: var(--main-grey);
    background-color: inherit;
}

.calendar-date.inactive:hover {
    transform: none;
    border: none;
    box-shadow: none;
    font-weight: inherit;
}


@media screen and (max-width: 1240px) {
    .calendar-date {
        width: 40px;
        height: 40px;

        border-radius: 9px;
    }

    .calendar-date > span {
        margin-top: 4px;
        font-size: 11px;
    }

    .calendar-date.today > span {
        margin-top: 0;
        font-size: 16px;
    }
}

@media screen and (max-width: 1900px) {
    .calendar-date.active {
        transform: scale(1.15);
    }

}

@import "Events/*";