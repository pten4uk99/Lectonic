.current-date-event-multiple > .event-same {
    display: flex;
    align-items: center;
    justify-content: center;
    justify-self: center;
    text-align: center;
    width: 20px;
    height: 20px;
}

.event-same.blue {
    background-color: rgba(0, 37, 255, 1);
    border-radius: 50%;
    z-index: 1;
}
.event-same.grey {
    background-color: rgba(196, 196, 196, 1);
    border-radius: 50%;
    z-index: 2;
}

.event-same > span {
    font-size: 11px;
    font-weight: 500;
    color: white;
}


@media screen and (max-width: 1240px){
    .current-date-event-multiple > .event-same {
        width: 16px;
        height: 16px;
    }
}