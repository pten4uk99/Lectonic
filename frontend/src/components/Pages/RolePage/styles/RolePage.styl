.container{
    box-sizing: border-box;
    width: fit-content;
    margin: 0 auto;
    margin-top: -32px;
}

.rolepage__header{
    height: 150px;
    background: #F4B400;
}

.rolepage__title{
    display: flex;
}

.rolepage__img-wrapper{
    margin-right: 24px;
    width: 140px;
    height: 140px;
    img{
        border-radius: 50%;
        display: block;
        width: 100%;
        height: 100%;
    }
}

.rolepage__title-box{
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
  
  .rolepage__name{
    margin-bottom: 15px;
  
    span{
      display: block;
      font-family: 'Montserrat';
      font-style: normal;
      font-weight: 700;
      font-size: 24px;
      line-height: 29px;
      color: #000000;
    }
  }
}

.rolepage__tag{
    border-radius: 20px;
    padding: 4px 12px;
    display: inline-block;
    font-family: 'Montserrat';
    font-style: normal;
    font-weight: 500;
    font-size: 11px;
    line-height: 13px;
    color: #FFFFFF;
    margin-right: 12px;
}

.tag-role{
    background: #0025FF;
}

.tag-city{
    background: #FF8A00;
}

.rolepage__box-1{
    width: 568px;
    margin-right: 36px
}

.rolepage__box-2{
    max-width: 290px;
}

.rolepage__description{
    display: flex;
}

.rolepage__description-box{
  word-wrap: break-word;
  font-size: 12px
  span {
      font-family: 'Montserrat';
      font-style: normal;
      font-weight: 600;
      font-size: 12px;
      line-height: 15px;
      color: #0025FF;
      display: block;
      margin-top: 35px;
      margin-bottom: 10px;
  }
  p{
      font-family: 'Montserrat';
      font-style: normal;
      font-weight: 400;
      font-size: 12px;
      line-height: 15px;
      color: #000000;
  }
  .pill-grey{
      font-size: 12px;
      max-width: 372px;
      overflow: hidden;
      display: block;
      width: fit-content;
      text-overflow: ellipsis;
      white-space: nowrap;
      margin-bottom: 12px;
  }
}

.rolepage__lecture{
    margin: 40px 0 72px;
    padding: 0 60px;
    & > button {
      padding: 6px 20px
      background-color: $main-blue;
      outline: none;
      border: none
      margin-right: 24px;
      border-radius: 18px;
      font-family: 'Montserrat';
      font-weight: 600;
      font-size: 12px;
      color: white;
      text-align: center;
      cursor: pointer;
      &.no-active{
        border: 1px solid
        background-color: white;
        color: black;
      }
    }
    .rolepage__lecture-btn{
        padding: 13px 91.5px 14px 91.5px;
        background: #B924FF;
        border-radius: 30px;
        border: none;
        font-family: 'Montserrat';
        font-weight: 500;
        font-size: 14px;
        line-height: 17px;
        text-align: center;
        color: #FFFFFF;
        margin: 0 auto;
        display: block;
        margin-top: 8px;
        cursor: pointer;
    }
    .workroom-card__box{
        margin: 0 0 28px 0;
        width: 240px;
    }
    .workroom-card__box-wrapper{
        padding: 20px;
        span{
            margin: 0;
        }
    }
    .workroom-card__box-btn{
        width: 80%;
    }
    .workroom-card__img-potential-lecture{
        width: 85%;
    }
    .workroom-card__box{
        margin-right: 12px;
        white-space: normal;
    }
}

.rolepage__line{
    height: 1px;
    background: #DBDBDB;
    border-radius: 18px;
    margin-bottom: 36px;
}

.rolepage__line-mt{
    margin-top: 40px;
}



